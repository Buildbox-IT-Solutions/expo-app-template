{
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"cSpell.words": ["lefthook", "partialize"],
	"editor.codeActionsOnSave": {
		"source.organizeImports.biome": "explicit"
	},
	"editor.detectIndentation": false,
	"editor.guides.bracketPairs": "active",
	"editor.linkedEditing": true,
	"editor.renderControlCharacters": true,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 4,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		".editorconfig": "biome*, lefthook*, commitlint*, .lintstagedrc",
		".env": ".env*",
		".gitignore": ".git*",
		"package.json": "tsconfig*, pnpm*, .nvmrc, .releaserc, app.json, eas.json, .npmrc"
	},
	"i18n-ally.keystyle": "flat",
	"i18n-ally.localesPaths": ["**/languages/**"],
	"i18n-ally.sourceLanguage": "pt-br"
}
